<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/nav.ejs') %>
    <main>        
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <form class="login-form" action="../../admin/properties" method="POST">
            <div class="form-control">
                <label for="name">Property Name</label>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'name') ? 'invalid' : '' %>"
                    type="text" 
                    name="name" 
                    id="name" 
                >
            </div>
            <div class="form-control">
                <label for="location">Property Location</label>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'location') ? 'invalid' : '' %>"    
                    type="text" 
                    name="location" 
                    id="location" 
                >
            </div>
            <div class="form-control">
                <label for="imageUrls">Images</label>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'imageUrls') ? 'invalid' : '' %>"
                    type="hidden" 
                    name="imageUrls" 
                    id="imageUrls" 
                >
            </div>
            <div class="centered">
                <input type="hidden" name="userId" value="<%= currentUser %>">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button class="btn btn-default" type="submit">Add Property</button>
            </div>
        </form>
    </main>
<%- include('../includes/end.ejs') %>