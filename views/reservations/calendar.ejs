<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/calendar.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        .date-grid button:first-child {
            grid-column: <%= startDay %>;
        }
    </style>
</head>

<body>
    <main>
        <%- include('../includes/nav.ejs') %>
        <div class="main-grid">
            <div class="calendar">
                <div class="month-indicator"> 
                    <% if ((month > currentMonth && year === currentYear) ||
                            year > currentYear) { %>
                        <button><</button>
                    <% } %>
                    <%= monthName %> <%= year %> 
                    <button>></button>
                </div>
                <div class="day-of-week">
                    <div>S</div>
                    <div>M</div>
                    <div>T</div>
                    <div>W</div>
                    <div>T</div>
                    <div>F</div>
                    <div>S</div>
                </div>
                <div class="date-grid">
                    <%for (i = 0; i < dates.length; i++) { %>
                        <button class="<%= !dates[i].available ? 'unavailable' : '' %>"><time datetime="<%= dates[i].date %>"><%= dates[i].date.getDate() %></time></button>
                    <% } %> 
                </div>
            </div>
            <div class="reservation">
                <form action="" method="POST">
                    <label for="start_date">Start Date</label>
                    <input type="date" id="start_date" name="start_date" min="<%= year %> + '-' + <%= month %> + '-01'">
                    <label for="end_date">End Date</label>
                    <input type="date" id="end_date" name="end_date" min="<%= year %> + '-' + <%= month %> + '-01'">
                    <label for="name">Name</label>
                    <input type="text" id="name" name="name">
                    <label for="phone">Phone</label>
                    <input type="text" id="phone" name="phone">
                    <label for="comments">Comments</label>
                    <textarea id="comments" name="comments"></textarea>
                    <input type="hidden" id="userId" name="userId" value="">
                    <input type="hidden" id="_csrf" name="_csrf" value="">
                </form>
            </div>
        </div>
        
          
    </main>
<%- include('../includes/end.ejs') %>