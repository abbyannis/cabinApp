<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/form.css">
</head>

<body>
    <%- include('../includes/nav.ejs') %>
    <main>
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <% if (message) { %>
            <div class="user-message"><%= message %></div>
        <% } %>
        <form class="login-form" action="../../auth/edit-profile" method="POST">
            <div class="form-control">
                <label for="first">First Name</label>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'first') ? 'invalid' : '' %>"
                    type="text" 
                    name="first" 
                    id="first" 
                    value="<%= currentUser.firstName %>"
                >
            </div>
            <div class="form-control">
                <label for="last">Last Name</label>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'last') ? 'invalid' : '' %>"    
                    type="text" 
                    name="last" 
                    id="last" 
                    value="<%= currentUser.lastName %>"
                >
            </div>
            <div class="form-control">
                <label for="email">Email Address</label>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>"
                    type="text" 
                    name="email" 
                    id="email" 
                    value="<%= currentUser.email %>"
                >
            </div>
            <div class="centered">
                <input type="hidden" name="userId" value="<%= currentUser %>">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button class="btn btn-default" type="submit">Update Profile</button>
            </div>
            
            <div class="centered">
                <a href="../auth/update-password">Update Password</a>
            </div>
        </form>
    </main>
<%- include('../includes/end.ejs') %>