<div class="backdrop">
    <h1>Cabin App</h1>
</div>
<header class="main-header">
    <nav class="main-header-nav">
        <ul class="main-header-item-list">
            <li class="main-header-item"><a class="<%= path === '/' ? 'active' : '' %>" href="/">Home</a></li>
            <% if (isAuthenticated) { %>
                <li class="main-header-item"><a class="<%= path === '/dashboard' ? 'active' : '' %>" href="/user/list">Dashboard</a></li>
                <li class="main-header-item"><a class="<%= path === '/reservation' ? 'active' : '' %>" href="/">Reservation</a></li>
                <li class="main-header-item"><a class="<%= path === '/inventory' ? 'active' : '' %>" href="/">Inventory</a></li>
                <li class="main-header-item"><a class="<%= path === '/maintenance' ? 'active' : '' %>" href="/">Maintenance</a></li>
                <li class="main-header-item"><a class="<%= path === '/account' ? 'active' : '' %>" href="/auth/profile">Account</a></li>
                <li class="main-header-item"><a class="<%= path === '/admin' ? 'active' : '' %>" href="/">Admin</a></li>
            <% } else { %>
                <li class="main-header-item"><a class="<%= path === '/login' ? 'active' : '' %>" href="/auth/Login">Login</a></li>
                <li class="main-header-item"><a class="<%= path === '/register' ? 'active' : '' %>" href="/auth/signup">Register</a></li>
            <% } %>
            <% if (isAuthenticated) { %>
                <li class="main-header-item">
                    <form action="../../../auth/logout" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button class="logout-button" type="submit">Logout</button>
                    </form>
                </li>
            <% } %>
        </ul>   
    </nav>
</header>